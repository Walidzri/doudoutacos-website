---
const { title, items, note } = Astro.props as {
  title: string;
  items: { label: string; value: string }[];
  note?: string;
};
---

<section class="py-16 px-6 bg-neutral-50">
  <div class="mx-auto max-w-5xl">
    <div class="text-center">
      <h2 class="text-4xl md:text-5xl">{title}</h2>
      {note ? (
        <p class="mt-3 text-neutral-600" style="font-family: Inter, system-ui, sans-serif;">
          {note}
        </p>
      ) : null}
    </div>

    <div class="mt-10 mx-auto max-w-xl rounded-2xl bg-white p-6 shadow ring-1 ring-black/5">
      <ul class="divide-y divide-black/5">
        {items.map((it) => (
          <li class="flex items-center justify-between py-3">
            <span class="text-neutral-800" style="font-family: Inter, system-ui, sans-serif;">{it.label}</span>
            <span class="font-semibold text-neutral-900" style="font-family: Inter, system-ui, sans-serif;">{it.value}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>
