---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google Fonts (1 fois ici) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Bebas+Neue&display=swap"
      rel="stylesheet"
    />


  </head>

  <body class="bg-white text-neutral-900">
    <Navbar />
    <slot />
    <button id="scrollTopBtn" aria-label="Remonter en haut" class="fixed bottom-6 right-6 inline-flex h-10 w-10 items-center justify-center rounded-full bg-gray-50 text-black shadow-md transition-colors duration-150 hover:bg-gray-200"> 
        <svg
    xmlns="http://www.w3.org/2000/svg"
    class="h-5 w-5"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="2"
  >
    <path stroke-linecap="round" stroke-linejoin="round" d="M5 15l7-7 7 7" />
  </svg>
      
  </button>
    <Footer />
    <script is:inline>
  const btn = document.getElementById("scrollTopBtn");

  // Afficher / cacher selon le scroll
  window.addEventListener("scroll", () => {
    if (window.scrollY > 300) {
      btn.classList.remove("opacity-0", "pointer-events-none");
      btn.classList.add("opacity-100");
    } else {
      btn.classList.add("opacity-0", "pointer-events-none");
      btn.classList.remove("opacity-100");
    }
  });

  // Scroll vers le haut
  btn.addEventListener("click", () => {
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  });
</script>


  </body>
</html>
